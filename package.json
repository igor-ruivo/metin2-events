{
	"name": "metin2-events",
	"version": "1.0.0",
	"description": "A discord bot for alerting about events in Metin2",
	"scripts": {
		"reminder": "tsx src/bin/reminder.ts",
		"register": "tsx src/bin/register.ts",
		"list": "tsx src/bin/list.ts",
		"lint": "npx eslint --fix --ext .ts ./src ./api ./eslint.config.cjs ./prettier.config.cjs ./package.json ./tsconfig.json 2>&1 && pnpm run format && pnpm tsc --noEmit",
		"format": "npx prettier --write \"src/**/*.{ts,js,json,css,md}\" \"api/**/*.{ts,js,json,css,md}\" *.json *.md *.cjs",
		"build": "pnpm tsc",
		"debug": "npx tsx --inspect-brk src/bin/reminder.ts"
	},
	"keywords": [
		"metin2",
		"events",
		"discord",
		"bot"
	],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@types/jsdom": "^21.1.7",
		"discord-interactions": "^4.3.0",
		"discord.js": "^14.22.1",
		"dotenv": "^17.2.1",
		"jsdom": "^26.1.0",
		"node-cron": "^4.2.1",
		"vercel": "^46.0.4"
	},
	"devDependencies": {
		"@ti-platform/aide-build-tools": "^4.1.0",
		"@tsconfig/recommended": "^1.0.10",
		"@types/node": "^24.0.13",
		"@types/node-cron": "^3.0.11",
		"@typescript-eslint/parser": "^8.36.0",
		"eslint": "^9.31.0",
		"eslint-plugin-promise": "^7.2.1",
		"prettier": "^3.6.2",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.37.0"
	}
}
